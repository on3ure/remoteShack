[Unit]
Description=ON3URE Relais
Requires=network.target
After=network.target

[Service]
Type=simple
Restart=always
SyslogIdentifier=relay
WorkingDirectory=/opt/on3ure/relay
ExecStartPre=/usr/bin/tvservice -o
ExecStart=/usr/local/bin/hypnotoad -f /opt/on3ure/relay/relay.pl

[Install]
WantedBy=multi-user.target
